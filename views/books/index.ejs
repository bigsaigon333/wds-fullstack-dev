<h2>Search Book</h2>
<form action="/books" method="GET">
  <div>
    <label for="">Title</label>
    <input type="text" name="title" id="" value="<%= searchOptions.name %>">
  </div>
  <div>
    <label for="">Published After</label>
    <input type="date" name="publishedAfter" id="" value="<%= searchOptions.publishedAfter %>">
  </div>
  <div>
    <label for="">Published Before</label>
    <input type="date" name="publishedBefore" id="" value="<%= searchOptions.publishedBefore %>">
  </div> 

  <button type="submit">Search</button>
</form>

<br>

<% books.forEach(book => { %>
  <a href="/books/<%= book.id%>">
    <img src="<%= book.coverImagePath %>" height="150" width="100" alt="book cover">
    <!-- <span> <%= book.title %> </span> -->
  </a>

<%})%>