<div class="form-row">
  <div class="form-item">  
      <label for="">Title</label>
      <input type="text" name="title" id="" value="<%= book.title %>" />
  </div>
  
  <div class="form-item">
    <label for="author">Author</label>
  
    <select name="author" id="author">
      <% authors.forEach(author => { %>
        <% if (author.id === book.author)  {%> 
          <option selected label="<%= author.name %>" value="<%= author.id %>"><%= author.name %></option>
        <% } else {%> 
          <option label="<%= author.name %>" value="<%= author.id %>"><%= author.name %></option>
        <% } %>   
      <% }) %>
    </select>
  </div>

</div>
  
<div class="form-row">

  <div class="form-item">
    <label for="">Publish Date</label>
    <input type="date" name="publishDate" id="" value=
    "<%= book.publishDate == null ? '' : book.publishDate.toISOString().split("T")[0] %>">
  </div>
  
  <div class="form-item">
    <label for="">Page Count</label>
    <input type="number" name="pageCount" id="" min="1" value="<%= book.pageCount%>">
  </div>
</div>

<div class="form-row">

  <div class="form-item form-item-no-grow">
    <label for="">Cover</label>
    <input type="file" name="cover" id="" class="book-cover filepond">
  </div>
  
  <div class="form-item ">
    <label for="">Description</label>
    <textarea name="description" id="" cols="30" rows="10"><%= book.description %></textarea>
  </div>
  
</div>